<section class="contact">
  <div class="container">
    <h2 class="headline headline--large">Haben wir Ihr Interesse geweckt?</h2>
    <form action="/.netlify/functions/ses-send-email"  method="POST" class="form">

    <div class="form__column--top">
      <div class="form__column--left">
        <fieldset>
          <div class="form__group">
            <label for="firstName">Vorname*</label>
            <input type="text" id="firstName" name="firstName" placeholder="" required>
          </div>
          <div class="form__group">
            <label for="lastName">Nachname*</label>
            <input type="text" id="lastName" name="lastName" placeholder="" required>
          </div>
        </fieldset>
        <fieldset>
          <label for="email">E-Mail*</label>
          <input type="email" id="email" name="email" placeholder="" required>
          <label for="tel">Telefon</label>
          <input type="tel" id="tel" name="tel" placeholder="">
        </fieldset>
      </div>

      <div class="form__column--right">
        <fieldset>
          <div class="form__group form__group--25">
            <label for="plz">PLZ*</label>
            <input type="number" id="plz" name="plz" placeholder="" required>
          </div>
          <div class="form__group form__group--75">
            <label for="place">Ort*</label>
            <input type="text" id="place" name="place" placeholder="" required>
          </div>
          <label for="">Sitz</label>
          <div class="select-wrapper">
            <select id="" name="" class="select">
              <option value="foo">Foo</option>
              <option value="bar">Bar</option>
            </select>
          </div>
        </fieldset>
        <fieldset>
          <input type="checkbox" id="" name="" value="">
          <label for="">Sie sind ein Unternehmen?</label><br>
          <label for="">Firmenname</label>
          <input type="text" id="" name="" placeholder="">
        </fieldset>
      </div>
    </div>

    <div class="form__column--bottom">
      <fieldset>
        <label for="">Nachricht</label>
        <textarea id="" name="" rows="4" cols="50" maxlength="1000"></textarea>
      </fieldset>
      <fieldset>
        <input type="checkbox" id="" name="" value="" required>
        <label for="">Ich habe die <a href="/" class="link" target="_blank">Informationen zur Privatsphäre</a> gelesen.*</label><br>
        <input type="checkbox" id="" name="" value="" required>
        <label for="">Ich stimme der Nutzung meiner persönlichen Daten zu Marketingzwecken zu.</label>
      </fieldset>
      <input type="submit" value="Anfrage senden" class="button button--primary">
    </div>
    </form>
  </div>
</section>