<section class="contact">
  <div class="container">
    <h2 class="headline headline--large">Haben wir Ihr Interesse geweckt?</h2>
    <form action="" class="form">

    <div class="form__column--top">
      <div class="form__column--left">
        <fieldset>
          <div class="form__group">
            <label for="">Vorname*</label>
            <input type="text" id="" name="" placeholder="" required>
          </div>
          <div class="form__group">
            <label for="">Nachname*</label>
            <input type="text" id="" name="" placeholder="" required>
          </div>
        </fieldset>
        <fieldset>
          <label for="">E-Mail*</label>
          <input type="email" id="" name="" placeholder="" required>
          <label for="">Telefon</label>
          <input type="tel" id="" name="" placeholder="">
        </fieldset>
      </div>

      <div class="form__column--right">
        <fieldset>
          <div class="form__group form__group--25">
            <label for="">PLZ*</label>
            <input type="number" id="" name="" placeholder="" required>
          </div>
          <div class="form__group form__group--75">
            <label for="">Ort*</label>
            <input type="text" id="" name="" placeholder="" required>
          </div>
          <label for="">Sitz</label>
          <div class="select-wrapper">
            <select id="" name="" class="select">
              <option value="foo">Foo</option>
              <option value="bar">Bar</option>
            </select>
          </div>
        </fieldset>
        <fieldset>
          <label class="form__checkbox" for="form-company">Sie sind ein Unternehmen?
            <input type="checkbox" id="form-company" name="company" value="">
            <span class="form__checkmark"></span>
          </label>
          <label for="">Firmenname</label>
          <input type="text" id="" name="" placeholder="">
        </fieldset>
      </div>
    </div>

    <div class="form__column--bottom">
      <fieldset>
        <label for="">Nachricht</label>
        <textarea id="" name="" rows="4" cols="50" maxlength="1000"></textarea>
      </fieldset>
      <fieldset>
        <label class="form__checkbox" for="form-privacy">Ich habe die <a href="/" class="link" target="_blank">Informationen zur Privatsphäre</a> gelesen.*
          <input type="checkbox" id="form-privacy" name="privacy" required>
          <span class="form__checkmark"></span>
        </label>
        <label class="form__checkbox" for="form-marketing">Ich stimme der Nutzung meiner persönlichen Daten zu Marketingzwecken zu.
          <input type="checkbox" id="form-marketing" name="marketing" required>
          <span class="form__checkmark"></span>
        </label>
      </fieldset>
      <input type="submit" value="Anfrage senden" class="button button--primary">
    </div>
    </form>
  </div>
</section>